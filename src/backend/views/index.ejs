<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <title>Node.js example</title>
      <style>
         table, th, td {
            border: 1px solid;
         }
      </style>
   </head>
   <body>
      <div>
         <h2><%=title%></h2>
         <table>
            <thead>
               <tr>
                  <th>Vonalszam</th>
                  <th>Tipus</th>
                  <th>Indulo megallo neve</th>
                  <th>Vegallomas megallo neve</th>
                  <th>Indulasi idopont</th>
                  <th>Vegallomas idopont</th>
               </tr>
            </thead>
            <tbody>
            <%
            if(serviceData.length > 0) {
                  for(var i=0; i<serviceData.length;i++){
                               %>
               <tr>
                  <td><%=serviceData[i].serviceNumber%></td>
                  <td><%=serviceData[i].serviceType%></td>
                  <td><%=serviceData[i].departureStop%></td>
                  <td><%=serviceData[i].arrivalStop%></td>
                  <td><%=serviceData[i].departureTime%></td>
                  <td><%=serviceData[i].arrivalTime%></td>
               </tr>
            <%      }
            }else{ %>
                  <tr>
                      <td colspan="6">No Data Found</td>
                  </tr>
            <%} %>
            </tbody>
         </table>
      </div>
   </body>
</html>